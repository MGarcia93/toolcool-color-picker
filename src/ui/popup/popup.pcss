.popup{
    position: absolute;
    left: 0;
    top: calc(100% - 1px);
    z-index: 50;

    width: 214px;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px -1px rgba(0, 0, 0, 0.1);
    padding: 0.5rem;
    background: #fff;
    border: 1px solid #cecece;
    border-radius: 0.25rem;
}

.popup.right{
    right: 0;
    left: auto;
}